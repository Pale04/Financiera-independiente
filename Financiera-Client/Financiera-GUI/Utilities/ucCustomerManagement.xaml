<UserControl x:Class="Financiera_GUI.Utilities.ucCustomerManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Financiera_GUI.Utilities"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="1280">
    
    <Grid Margin="0,2,0,2" Height="Auto" Background="#E3E3E3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="rfcLabel" Margin="0,0,10,0" Grid.Column="0" HorizontalContentAlignment="Center" VerticalAlignment="Center"
                FontFamily="Roboto" FontSize="16" >RFC</Label>
        <Label x:Name="nameLabel" Margin="0,0,10,0" Grid.Column="1" HorizontalContentAlignment="Center" VerticalAlignment="Center"
                FontFamily="Roboto" FontSize="16" >Nombre</Label>
        <Label x:Name="stateLabel" Margin="0,0,10,0" Grid.Column="2" HorizontalContentAlignment="Center" VerticalAlignment="Center"
                FontFamily="Roboto" FontSize="16" >Estado de cuenta</Label>
        <Border x:Name="showDetailButton" Grid.Column="3" Style="{StaticResource ButtonBehaviorGlobal}" MouseLeftButtonDown="ShowDetail"
                Height="25" Width="25" CornerRadius="15">
            <Image Source="../images/showDetails_icon.png" Stretch="Uniform"/>
        </Border>
    </Grid>
</UserControl>
