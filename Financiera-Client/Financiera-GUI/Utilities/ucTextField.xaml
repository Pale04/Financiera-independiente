<UserControl x:Class="Financiera_GUI.Utilities.ucTextField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Financiera_GUI.Utilities"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Margin="5">
            <Label x:Name="content" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top" Height="Auto" FontSize="20" FontWeight="Normal"  FontFamily="Roboto">Text</Label>
            <Border CornerRadius="10" BorderBrush="Gray" BorderThickness="2" Background="White" HorizontalAlignment="Stretch">
                <TextBox x:Name="textField" HorizontalAlignment="Stretch" VerticalAlignment="Center" Padding="5" Height="30" Margin="10" FontSize="18" FontFamily="Roboto" BorderThickness="0" Foreground="Black"/>
            </Border>
            <Label Name="errorLabel" VerticalAlignment="Center" HorizontalAlignment="Left" Height="Auto" FontFamily="Roboto" FontSize="10" Foreground="Red" Visibility="Hidden">*Requerido</Label>
        </StackPanel>
    </Grid>
</UserControl>
