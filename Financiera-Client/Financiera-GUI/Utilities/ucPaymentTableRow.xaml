<UserControl x:Class="Financiera_GUI.Utilities.ucPaymentTableRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Financiera_GUI.Utilities"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="1280">
    <Grid x:Name="Row" Margin="0,2,0,2" Height="Auto" Background="#E3E3E3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="Payment" Grid.Column = "0" Margin="0,0,10,0" HorizontalAlignment="Center" VerticalAlignment="Center"
       FontFamily="Roboto" FontSize="16">Pago</Label>
        <Label x:Name="PaymentDate" Grid.Column="1" Margin="0,0,10,0" HorizontalAlignment="Center" VerticalAlignment="Center"
       FontFamily="Roboto" FontSize="16">Fecha de Pago</Label>
        <Label x:Name="Amount" Grid.Column="2" Margin="0,0,10,0" HorizontalAlignment="Center" VerticalAlignment="Center"
       FontFamily="Roboto" FontSize="16">Monto</Label>
    </Grid>
</UserControl>
