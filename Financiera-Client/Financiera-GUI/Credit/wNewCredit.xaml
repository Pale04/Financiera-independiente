<Page x:Class="Financiera_GUI.Credit.wNewCredit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Financiera_GUI.Credit"
      mc:Ignorable="d" 
      xmlns:notifications="clr-namespace:Notification.Wpf.Controls;assembly=Notification.Wpf"
      xmlns:userControls="clr-namespace:Financiera_GUI.Utilities"
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="wNewCredit">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Margin="10" Grid.Column="0" Height="40" Width="40" CornerRadius="50" Style="{StaticResource ButtonBehaviorGlobal}" MouseLeftButtonDown="Back">
                <Image HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Source="../images/back-logo.png" Stretch="Uniform"/>
            </Border>
            <Label Grid.Column="1" Margin="10" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
FontFamily="Roboto" FontSize="30" FontWeight="Bold">Crear cuenta de trabajador</Label>
        </Grid>

        <Grid Grid.Row="1" Margin="200, 10, 200, 20">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical" Grid.Column="0" Margin="0, 0, 40, 0">
                <Label FontSize="18" FontWeight="SemiBold">Cuentas bancarias (Clabe)</Label>
                <userControls:ucTextField x:Name="capitalField" Text="Capital" MaxLen="18"/>
                <userControls:ucTextField x:Name="durationField" Text="Duración" MaxLen="18"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Grid.Column="1" Margin="40, 0, 0, 0">
                <Label FontSize="18" FontWeight="SemiBold">Condición de crédito</Label>
                <ScrollViewer HorizontalAlignment="Left" VerticalAlignment="Top" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="5" x:Name="conditionsPanel"/>
                </ScrollViewer>
                <Label Name="roleErrorLabel" VerticalAlignment="Center" HorizontalAlignment="Left" Height="Auto" FontFamily="Roboto" FontSize="10" Foreground="Red" Visibility="Hidden">*Requerido</Label>
            </StackPanel>

            <Grid x:Name="documentsGrid" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
            </Grid>
        </Grid>

        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="200, 0, 0, 50">
            <Button FontSize="20" Padding="20, 5, 20, 5" x:Name="SignBtn" Click="ShowSignWindow" Content="Firmar" Margin="0, 0, 30, 0"/>
            <Button FontSize="20" Padding="15, 5, 15, 5" x:Name="SaveBtn" Click="CreateCreditRequest" Content="Crear solicitud"/>
        </StackPanel>
        <notifications:NotificationArea Grid.Row="2" Margin="0,0,5,5" x:Name="WindowArea" Position="BottomRight" MaxItems="1" Height="120" Width="600" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
    </Grid>
</Page>
