<Window x:Class="Financiera_GUI.wSystemManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Financiera_GUI"
        mc:Ignorable="d"
        Title="System Management" Height="720" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Background="#FF0D1B2A">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Image Margin="10" Grid.Column="0" Source="../images/financiera_logo.png" Stretch="Uniform"/>
            <Label Margin="10" Grid.Column="1" HorizontalAlignment="Center"
                   Height="Auto"
                   FontSize="50" FontFamily="Roboto" FontWeight="Bold" Foreground="White" >Financiera Independiente</Label>
            <Button Margin="1038,30,10,30" Grid.Column="1"
                Height="40px" Width="Auto">
                <StackPanel Orientation="Horizontal">
                    <Image Source="../images/logout_icon.png" Margin="5"/>
                    <TextBlock Text="Cerrar sesión" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
        </Grid>


        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Border Margin="10" Background="#FFE0E1DD" CornerRadius="20">
                    <Grid Width="400" Height="150" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Image Grid.Row="0" Margin="10" Source="../images/agregar_usuario_icon.png" Stretch="Uniform"/>
                        <Label Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25" FontFamily="Roboto">Crear cuentas</Label>
                    </Grid>
                </Border>
                <Border Margin="10" Background="#FFE0E1DD" CornerRadius="20">
                    <Grid Width="400" Height="150" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Image Grid.Row="0" Margin="10" Source="../images/edit_account_icon.png" Stretch="Uniform"/>
                        <Label Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25" FontFamily="Roboto">Modificar cuentas</Label>
                    </Grid>
                </Border>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Border Margin="10" Background="#FFE0E1DD" CornerRadius="20">
                    <Grid Width="400" Height="150" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Image Grid.Row="0" Margin="10" Source="../images/credit_policy_icon.png" Stretch="Uniform"/>
                        <Label Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25" FontFamily="Roboto">Gestión de políticas de crédito</Label>
                    </Grid>
                </Border>
                <Border Margin="10" Background="#FFE0E1DD" CornerRadius="20">
                    <Grid Width="400" Height="150" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Image Grid.Row="0" Margin="10" Source="../images/credit_condition_icon.png" Stretch="Uniform"/>
                        <TextBlock Grid.Row="1" Margin="10,0" Height="Auto"
                                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                                   FontSize="25" FontFamily="Roboto" TextAlignment="Center"
                                   TextWrapping="Wrap">Gestión de condiciones de crédito</TextBlock>
                    </Grid>
                </Border>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Border Margin="10" Background="#FFE0E1DD" CornerRadius="20">
                    <Grid Width="400" Height="180" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Image Grid.Row="0" Margin="10" Source="../images/document_icon.png" Stretch="Uniform"/>
                        <TextBlock Grid.Row="1" Margin="20,0" Height="Auto"
                                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                                   FontSize="25" FontFamily="Roboto" TextAlignment="Center"
                                   TextWrapping="Wrap">Gestión de documentos para solicitud de crédito</TextBlock>
                    </Grid>
                </Border>
                <Border Margin="10" Background="#FFE0E1DD" CornerRadius="20">
                    <Grid Width="400" Height="180" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Image Grid.Row="0" Margin="10" Source="../images/sucursal_icon.png" Stretch="Uniform"/>
                        <TextBlock Grid.Row="1" Margin="10" Height="Auto" 
                                   VerticalAlignment="Top" HorizontalAlignment="Center" 
                                   FontSize="25" FontFamily="Roboto" TextAlignment="Center"
                                   TextWrapping="Wrap">Gestión de sucursales</TextBlock>
                    </Grid>
                </Border>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
